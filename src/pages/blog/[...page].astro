<style lang="scss">
  ul {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 4rem;

    @media (min-width: 550px) {
      grid-template-columns: repeat(1, 1fr);
      grid-gap: 2rem;
    }

    @media (min-width: 950px) {
      grid-template-columns: repeat(1, 1fr);
    }
  }
  .alert {
    padding: 1rem;
    font-size: 1.5rem;
    background: #f4f47a;
    border: 2px solid var(--primary-300);
    border-left: 10px solid var(--primary-300);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    border-radius: 4px;
    color: var(--primary-500);
    display: flex;
    max-width: 800px;
    width: fit-content;
    margin: 1rem auto;
    align-items: center;
    gap: 0.5rem;

    &__content {
      display: flex;
      flex-direction: column;
      gap: 0;
      width: 100%;
      padding-left: 1rem;
      p {
        font-size: 15px;
        margin-bottom: 0;
        text-align: center;
        width: 100%;
        display: block;
      }
    }

    [data-icon] {
      font-size: 2.4rem;
      display: flex;
      align-items: center;
      text-align: center;
      color: var(--secondary-500);
    }
  }
</style>
