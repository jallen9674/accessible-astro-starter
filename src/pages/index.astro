  <section class="mt-64 mb-32">
    <div class="container">
      <h2 class="mb-16 text-6xl">Counters</h2>
      <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 md:grid-cols-4">
        <Counter count="130" title="Stars" sub="On GitHub" />
        <Counter count="17" title="Accessible" sub="Components" />
        <Counter count="500" title="Commits" sub="Merged" />
        <Counter count="18+" title="Months" sub="Since launch" />
      </div>
    </div>
  </section>
   -->
</DefaultLayout>

<style lang="scss" is:global>
  @use '../assets/scss/base/breakpoint' as *;
  @use '../assets/scss/base/outline' as *;

  .skills {
    &__list {
      list-style-position: outside;
      padding-left: 1.5rem;
      margin: 15px 0;
      li {
        list-style-type: disc;
        font-size: 0.9rem;
      }
    }
  }

  .worked-with  {
    &__skills {
      display: flex;
      flex-wrap: wrap;
      gap: 4px;

      li {
        background: var(--primary-100);
        color: var(--neutral-100);
        border-radius: 4px;
        width: fit-content;
        text-align: center;
        line-height: 1;
        letter-spacing: 1px;
        display: block;
        padding: 4px 8px;;
        font-weight: 600;
        font-size: 11px;
        ////text-transform: uppercase;
      }
    }

    &__tech {
      margin-top: 1rem;
      padding-left: 1.5rem;
      list-style-position: outside;
      li {
        list-style-type: disc;
        font-size: 0.8rem;
      }
    }
  }

  .homepage-experience {

    &__dates {
      
      font-size: 0.7rem;
      display: block;
      margin: 0 0 0 0;
      text-transform: uppercase;
      font-weight: bold;
      
    }

    &__location {
      font-style: italic;
      display: block;
      margin: 0 0 1.5rem 0;
      font-size: 0.9rem;
      line-height: 1.2;
    }

    &__title{
      font-weight: bold;
      display: block;
      margin: 1rem 0 1rem 0;
      line-height: 1.2;
      
    }

    &__list {
      margin: 0.5rem 0;
      list-style-position: outside;
      padding-left: 1.5rem;
       li {
        list-style-type: disc;
        font-size: 0.95rem;
       }
    }

  }

</style>