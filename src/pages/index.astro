---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import Hero from '../components/Hero.astro'
import Feature from '../components/Feature.astro'
import Counter from '../components/Counter.astro'
import ContentMedia from '../components/ContentMedia.astro'

import logoFusion92 from '../assets/img/logo-fusion92.png'
import logoMindvolt from '../assets/img/logo-mindvolt.png'
import logoWebsiteGenii from '../assets/img/logo-website-genii.png'
import logoMorrison from '../assets/img/logo-morrison-m.svg'
import logoHennessey from '../assets/img/logo-hennessey.svg'

import expCocoa from '../../public/images/cocoa.jpg';
import expHooters from '../../public/images/hooters-logo.png';
import expPalmetto from '../../public/images/pd.jpg';
//import expJohnFoy from '../../public/images/the-strong-arm.png';
import expCck from '../../public/images/cck-isolated.svg';
import expTiffin from '../../public/images/tiffin.webp';
import expPriority from '../../public/images/priority.jpg';

import Collaboration from '../components/Collaboration.astro'
---

<DefaultLayout title="John Allen - Front End Web Developer - Birmingham, AL">
  <Hero />
  <section class="my-12 homepage-experience">
    <div class="container">
      <h2 class="mb-8 text-4xl">Professional Experience</h2>
      <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-2">
        <Feature icon="mdi:tailwind" title="Fusion92" image={logoFusion92}>
          <span class="homepage-experience__dates">
            2023 - Present | Chicago, IL (Remote)
          </span>
          <span class="homepage-experience__title">
            Sr. Developer
          </span>
                
          <ul class="homepage-experience__list">
            <li>Developed webapps and WordPress plugins for various clients</li>
            <li>Added enhancements and features to existing client products</li>
            <li>Connecting clients with their API needs</li>
            <li>Implemented on-site technial SEO optimizations</li>            
          </ul>
        </Feature>
        <Feature icon="mdi:wheelchair-accessibility" title="Morrison Agency" image={logoMorrison} invertLight={true}>
          <span class="homepage-experience__dates">
            2022-2023 | Atlanta, GA (Remote)
          </span>
          <span class="homepage-experience__title">
            Sr. Front End Developer
          </span>         
            
          <ul class="homepage-experience__list">
            <li>Built websites and added features for a variety of CMS (WordPress, Statamic, CraftCMS,  Perch)</li>
            <li>Implemented on-site technical SEO optimization</li>
            <li>Built email marketing campaigns on an enterprise scale (Hooters.com, Zoo Atlanta)</li>
            <li>Managed overseas development teams for client projects</li>
            <li>Configured sophisticated analytics tracking and reporting for client sites</li>
          </ul>
        </Feature>
        <Feature icon="mdi:looks" title="Mindvolt" image={logoMindvolt}>
          <span class="homepage-experience__dates">
            2021-2022 |  Birmingham, AL (Remote)
          </span>
          <span class="homepage-experience__title">
            Sr. Front End Developer
          </span>
          
          <ul class="homepage-experience__list">
            <li>Developed websites for clients on a variety of content management systems</li>
            <li>Maintained client sites</li>
            <li>Audited and optimized sites from a technical SEO perspective</li>
            <li>Established methodologies and wrote  documentation for development workflow</li>
          </ul>
        </Feature>
        <Feature icon="mdi:eslint" title="Website Genii" image={logoWebsiteGenii} invertDark={true}>
          <span class="homepage-experience__dates">
            2020-2021 | Atlanta, GA (Remote)
          </span>
          <span class="homepage-experience__title">
            Front End Developer
          </span>
          
          <ul class="homepage-experience__list">
            <li>Managed analytics and reporting for clients</li>
            <li>Performed keyword research and developed content plans</li>
            <li>Developed and maintained sites for clients</li>
            <li>Wrote documentation for sites and developed company processes</li>
            <li>Handled general support requests</li>
          </ul>
        </Feature>
        <Feature icon="mdi:eslint" title="Hennessey Digital" image={logoHennessey}>
          <span class="homepage-experience__dates">
            2015-2020 | Los Angeles, CA (Remote)
          </span>
          <span class="homepage-experience__title">
            Front End Developer / Sr. Developer
          </span>

          <ul class="homepage-experience__list">
            <li>Worked with and managed on-shore and off-shore developers to ensure projects were completed on time and to the highest of standards </li>
            <li>Developed websites for clients across a wide range of industries </li>
            <li>Converted sites built on proprietary CMS to WordPress </li>
            <li>Ensured sites followed WCAG accessibility guidelines where appropriate </li>
            <li>Worked to develop content QA and publishing methods for the company and clients</li>
            <li>Coordinated with PPC vendors to ensure proper tracking was in place (Phone calls, forms, chat, etc.), and implemented various A/B conversion optimization tests </li>
            <li>Performed technical SEO audits and fixed on-site issues discovered</li>
          </ul>
        </Feature>
      </div>
    </div>
  </section>

  <section class="my-32 worked-with">
    <div class="container">
      <h2 class="mb-8 text-4xl">Selected Corporate Collaborations</h2>
      <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">        
        <Collaboration icon="mdi:book-open-page-variant" image={expHooters} title="Hooters" logoBackgroundColor = "bg-slate-100">
          <ul class="worked-with__skills">
            <li>Web Development</li>
            <li>Technical SEO</li>
            <li>Email Marketing</li>
          </ul>
          <ul class="worked-with__tech">
            <li>PerchCMS</li>
            <li>Punchh</li>
            <li>MJML</li>
            <li>HTML/CSS/PHP/JS</li>
          </ul>
        </Collaboration>
        <Collaboration icon="mdi:language-markdown" image={expTiffin} title="Tiffin Motorhomes" logoBackgroundColor = "bg-slate-100">
          <ul class="worked-with__skills">
            <li>Web Development</li>
            <li>Technical SEO</li>
          </ul>
          <ul class="worked-with__tech">
            <li>CraftCMS</li>
            <li>Vue.js</li>
            <li>HTML/CSS/PHP/JS</li>
          </ul>
        </Collaboration>
        <Collaboration icon="mdi:theme-light-dark" image={expPalmetto} title="Palmetto Dunes Resort" logoBackgroundColor = "bg-slate-100">
          <ul class="worked-with__skills">
            <li>Web Development</li>
            <li>Technical SEO</li>
            <li>API Integration</li>
          </ul>
          <ul class="worked-with__tech">
            <li>Statamic CMS</li>
            <li>HTML/CSS/PHP/JS</li>
          </ul>
        </Collaboration>
        <Collaboration icon="mdi:cog" image={expCck} title="Chisholm, Chisholm, & Kilpatrick LTD." logoBackgroundColor = "bg-slate-100">
          <ul class="worked-with__skills">
            <li>Web Development</li>
            <li>Technical SEO</li>
            <li>Accessibility Remediation</li>
          </ul>
          <ul class="worked-with__tech">
            <li>WordPress</li>
            <li>HTML/CSS/PHP/JS</li>
          </ul>
        </Collaboration>
           <Collaboration icon="mdi:cog" image={expPriority} title="Priority Commerce" logoBackgroundColor = "bg-slate-100">
          <ul class="worked-with__skills">
            <li>Web Development</li>
            <li>Technical SEO</li>
            <li>Accessibility Remediation</li>
            <li>API Integration</li>
          </ul>
          <ul class="worked-with__tech">
            <li>WordPress</li>
            <li>HTML/CSS/PHP/JS</li>
            <li>SEO</li>
          </ul>
        </Collaboration>
        <Collaboration icon="mdi:lighthouse" image={expCocoa} title="Land O Lakes Cocoa Classics" logoBackgroundColor = "bg-slate-100">
          <ul class="worked-with__skills">
            <li>Web Development</li>
            <li>Technical SEO</li>
            <li>Accessibility Remediation</li>
          </ul>
          <ul class="worked-with__tech">
            <li>WordPress</li>
            <li>HTML/CSS/PHP/JS</li>
            <li>SEO</li>
          </ul>
        </Collaboration>
      </div>
    </div>
  </section>

  <section class="my-32 skills">
    <div class="container">
    <h2 class="mb-8 text-4xl">Skills</h2>

    <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">     
      <Feature icon="mdi:application-braces-outline" title="Languages">
        <ul class="skills__list">
          <li>JavaScript (ES6+)</li>
          <li>CSS (SASS)</li>
          <li>HTML</li>
          <li>PHP</li>
          <li>SQL</li>
        </ul>
      </Feature>
      <Feature icon="mdi:apple-icloud" title="Technologies">
        <ul class="skills__list">
          <li>Git </li>
          <li>MJML</li>
          <li>Vue / React / Gatsby / Astro</li>
          <li>jQuery</li>
          <li>Bootstrap / Tailwind</li>
          <li>Want to know more? <a href="/contact">Lets chat!</a></li>
        </ul>
      </Feature>
      <Feature icon="mdi:tools" title="Tools">
        <ul class="skills__list">
          <li>Jira / Monday / Asana / ClickUp</li>
          <li>Slack / Teams / Zoom </li>
          <li>SEMRush / AHrefs / Screaming Frog</li>
          <li>Figma / Adobe Suite</li>
          <li>Webpack/Gulp/etc.</li>
          <li>Salesforce</li> <!-- Automation also include? -->
          <li>Punchh</li>
        </ul>
      </Feature>
      <Feature icon="mdi:database-check-outline" title="Content Management Systems">
        <ul class="skills__list">
          <li>WordPress (including ACF)</li>
          <li>Craft</li>
          <li>Statamic</li>
          <li>Perch</li>        
        </ul>
      </Feature>
      
    </div>

    </div>
  </section>
